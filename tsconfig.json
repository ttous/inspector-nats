{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "declaration": true,
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "sourceRoot": "./lib/",
        "rootDir": "./",
        "charset": "utf-8",
        "outDir": "build/"
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ]
}